{
	"name": "kids-dev-studio",
	"displayName": "Kids Dev Studio",
	"description": "",
	"publisher": "Visual-Studio-Kids",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
        "Themes",
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.kidsDevStudio",
		"onView:newFile"
	],
	"main": "./out/extension.js",
	"contributes": {
        "themes": [
            {
                "label": "Kids Dev Studio UI Theme",
                "uiTheme": "vs",
                "path": "./themes/Kids-Dev-Studio-color-theme.json"
            }
        ],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "new-file",
					"title": "New File",
					"icon": "media/icons/New.svg"
				},
				{
					"id": "open-file",
					"title": "Open File",
					"icon": "media/icons/Open.svg"
				},
				{
					"id": "save-file",
					"title": "Save File",
					"icon": "media/icons/Save.svg"
				},
				{
					"id": "library",
					"title": "Library",
					"icon": "media/icons/Library.svg"	
				},
                {
					"id": "search",
					"title": "Search",
					"icon": "media/icons/Search.svg"
				},
				{
					"id": "cut-text",
					"title": "Cut",
					"icon": "media/icons/Cut.svg"
				},
				{
					"id": "copy-text",
					"title": "Copy",
					"icon": "media/icons/Copy.svg"
				},
				{
					"id": "paste-text",
					"title": "Paste",
					"icon": "media/icons/Paste.svg"
				},
				{
					"id": "undo-action",
					"title": "Undo",
					"icon": "media/icons/Undo.svg"
				},
				{
					"id": "redo-action",
					"title": "Redo",
					"icon": "media/icons/Redo.svg"
				}, 
				{
					"id": "run-program",
					"title": "Run",
					"icon": "media/icons/Run.svg"
				}
			]
		},
		"views": {
			"new-file": [
				{
					"id": "newFile",
					"name": "New File"
				}
			],
			"open-file": [
				{
					"id": "openFile",
					"name": "Open File"
				}
			],
			"save-file": [
				{
					"id": "saveFile",
					"name": "Save File"
				}
			],
			"library": [
				{
					"id": "library",
					"name": "Library"
				}
			],
			"search": [
				{
					"id": "search",
					"name": "Search"
				}
			],
			"cut-text": [
				{
					"id": "cutText",
					"name": "Cut"
				}
			],
			"copy-text": [
				{
					"id": "copyText",
					"name": "Copy"
				}
			],
			"paste-text": [
				{
					"id": "pasteText",
					"name": "Paste"
				}
			],
			"undo-action": [
				{
					"id": "undoAction",
					"name": "Undo"
				}
			],
			"redo-action": [
				{
					"id": "redoAction",
					"name": "Redo"
				}
			],
			"run-program": [
				{
					"id": "runProgram",
					"name": "Run"
				}
			]
		},


		"commands": [
			{
				"command": "extension.kidsDevStudio",
				"title": "Launch Kids Dev studio"
			},
			{
				"command": "extension.save",
				"title": "Save",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				  }
			},
			{
				"command": "newFile.new",
				"title": "New",
				"icon": {
					"light": "resources/light/new.svg",
					"dark": "resources/dark/ne.svg"
				  }
			}
		],
		"menus": {
			"view/title": [
			  {
				"command": "extension.save",
				"when": "view == saveFile",
				"group": "inline"
			  },
			  {
				"command": "newFile.new",
				"when": "view == newFile",
				"group": "inline"
			  }

			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^10.2.0",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	},
	"libraries": {
		"Arrays": "1",
		"Strings": "2",
		"Loops": "3"
	}
}
